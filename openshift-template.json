{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "template.openshift.io/bindable": "false"
  },
  "labels": {
    "template": "openshift-pipeline-example",
    "app": "openshift-pipeline-example"
  },
  "parameters": [
    {
      "name": "NAME",
      "displayName": "Name",
      "description": "The name assigned to all of the frontend objects defined in this template.",
      "required": true,
      "value": "openshift-pipeline-example"
    }
  ],
  "objects": [
    {
      "kind": "Secret",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}"
      },
      "stringData": {
        "key1": "val1"
      }
    },
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}",
        "annotations": {
          "description": "Keeps track of changes in the application image"
        }
      }
    },
    {
      "kind": "BuildConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}"
      },
      "spec": {
        "runPolicy": "Serial",
        "strategy": {
          "type": "DockerImage",
          "dockerStrategy": {
            "dockerfilePath": "Dockerfile"
          }
        },
        "output": {
          "to": {
            "kind": "ImageStream",
            "name": "${NAME}:latest"
          }
        },
        "source": {
          "type": "Git",
          "git": {
            "uri": "https://github.com/ismanapa/openshift-pipeline-test"
          }
        }
      }
    }
  ]
}